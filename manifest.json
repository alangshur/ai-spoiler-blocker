{
  "manifest_version": 3,
  "name": "AI Spoiler Blocker",
  "description": "Blocks your most annoying spoilers using AI.",
  "version": "1.0",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "spoiler-blocker-icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.x.com/*"],
      "js": ["content.js"],
      "type": "module"
    }
  ]
}
