{
  "manifest_version": 3,
  "name": "Spoiler Blocker",
  "description": "Blocks your most annoying spoilers.",
  "version": "1.0",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "spoiler-blocker-icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
